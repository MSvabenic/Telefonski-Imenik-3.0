@model Models.ViewModels.BrojViewModel
@{
    ViewBag.Title = "Dodaj broj";
}

<h2>Dodaj broj</h2>
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form class="form-horizontal" id="forma1" name="forma1" enctype="multipart/form-data">
                <div class:"form-group">
                    @Html.ValidationMessageFor(m => m.OsobaId, "", new { @class = "text-danger" }) <br />
                    @Html.LabelFor(m => m.OsobaId)
                    @Html.DropDownListFor(x => x.OsobaId, new SelectList(Enumerable.Empty<SelectListItem>()), new { id = "osobaId", @class = "form-control" })
                </div>
                <div class:"form-group">
                    @Html.ValidationMessageFor(m => m.BrojTip, "", new { @class = "text-danger" }) <br />
                    @Html.LabelFor(m => m.BrojTip)
                    @Html.DropDownListFor(x => x.BrojTip, new SelectList(Enumerable.Empty<SelectListItem>()), new { id = "brojTipId", @class = "form-control" })
                </div>
                <div class:"form-group">
                    @Html.ValidationMessageFor(m => m.Broj, "", new { @class = "text-danger" }) <br />
                    @Html.LabelFor(m => m.Broj)
                    @Html.TextBoxFor(m => m.Broj, new { id = "broj", @class = "form-control", Value = "" })
                </div>
                <div class:"form-group">
                    @Html.LabelFor(m => m.OpisBroja)
                    @Html.TextAreaFor(m => m.OpisBroja, new { id = "opis", @class = "form-control" })
                </div>
                <button id="btn1" name="spremi" type="submit" class="btn btn-primary">Spremi</button>
            </form>
        </div>
        <div class="col-lg-6">
            <img src="~/Content/Slike/brojevi.jpg" class="img-rounded" />
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Custom/DodajBroj.js"></script>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}